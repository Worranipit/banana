import pygame

pygame.init()
Screen = pygame.display.set_mode((800, 600))
pygame.display.set_caption("KFC[Kentucky Fight Championship]")
Symbol = pygame.image.load("boxingicon.png")
pygame.display.set_icon(Symbol)
Background = pygame.image.load("Arena.jpg")
Rebackground = pygame.transform.scale(Background,(800,600))
Player = pygame.image.load('Dragon.gif')
Dragon = pygame.transform.scale(Player,(400,400))
Position_X = 350
Position_Y = 400
Move = 5

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            quit()
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and Position_X > 0:
        Position_X = Position_X - Move
    if keys[pygame.K_RIGHT] and Position_X < 800 - 100:
        Position_X = Position_X + Move

    Screen.blit(Dragon, (Position_X, Position_Y))
    Screen.blit(Rebackground, (0,0))
    pygame.display.update()

